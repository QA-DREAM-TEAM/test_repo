# Logging Configuration Environment Variables
# Copy this file to .env and adjust values as needed

# ===== BASIC CONFIGURATION =====
NODE_ENV=development
LOG_LEVEL=debug
LOG_DIR=logs

# ===== SERVICE CONFIGURATION =====
SERVICE_NAME=nodejs-app
APP_VERSION=1.0.0

# ===== LOGGING FEATURES =====
ENABLE_CONSOLE_LOG=true
ENABLE_HTTP_LOG=true
ENABLE_FILE_ROTATION=true

# ===== PERFORMANCE SETTINGS =====
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=10
LOG_COMPRESSION=true

# ===== EXTERNAL INTEGRATIONS =====
# Uncomment and configure for external log aggregation services

# ELK Stack Configuration
# ELASTICSEARCH_URL=http://localhost:9200
# LOGSTASH_HOST=localhost
# LOGSTASH_PORT=5000

# Splunk Configuration
# SPLUNK_URL=https://your-splunk-instance.com
# SPLUNK_TOKEN=your-splunk-token

# DataDog Configuration
# DATADOG_API_KEY=your-datadog-api-key
# DATADOG_APP_KEY=your-datadog-app-key

# AWS CloudWatch Configuration
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# CLOUDWATCH_LOG_GROUP=your-log-group

# ===== SECURITY SETTINGS =====
LOG_SANITIZE_SENSITIVE_DATA=true
LOG_INCLUDE_STACK_TRACES=true

# ===== DEVELOPMENT SETTINGS =====
LOG_PRETTY_PRINT=true
LOG_COLORIZE=true
LOG_TIMESTAMP_FORMAT=YYYY-MM-DD HH:mm:ss.SSS

# ===== MONITORING AND ALERTING =====
LOG_ERROR_THRESHOLD=10
LOG_WARN_THRESHOLD=50
ENABLE_LOG_METRICS=true