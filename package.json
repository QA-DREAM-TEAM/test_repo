{
  "name": "nodejs-logging-framework",
  "version": "1.0.0",
  "description": "Comprehensive Node.js logging configuration framework using Winston",
  "main": "config/logging.config.js",
  "scripts": {
    "start": "node app.js",
    "dev": "NODE_ENV=development node app.js",
    "prod": "NODE_ENV=production node app.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "logs:clean": "rm -rf logs/*.log",
    "logs:tail": "tail -f logs/combined.log",
    "logs:errors": "tail -f logs/error.log"
  },
  "keywords": [
    "logging",
    "winston",
    "nodejs",
    "framework",
    "configuration"
  ],
  "author": "QA-DREAM-TEAM",
  "license": "MIT",
  "dependencies": {
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/QA-DREAM-TEAM/test_repo.git"
  },
  "bugs": {
    "url": "https://github.com/QA-DREAM-TEAM/test_repo/issues"
  },
  "homepage": "https://github.com/QA-DREAM-TEAM/test_repo#readme"
}